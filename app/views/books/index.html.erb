<h1>投稿一覧</h1>

<% @books .each do |book| %>
 <p>タイトル</p>
  <span><%= book.title %></span>
  <p>body</p>
  <span><%= book.body %></span>
  <%= link_to "Show", book_path(book.id) %>  
  <%= link_to "Edit", edit_book_path(book.id) %>
  <%= link_to "Destory", destroy_book_path(book.id) %>
  <% end %>




 
 <%= form_with model: @book do |f| %>
 
 <h4>Title</h4>
 <%= f.text_field :title %>
  
<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit "creat book" %>
  <% end %>